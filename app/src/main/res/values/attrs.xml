<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EllipsizedTextView">
        <attr name="ellipsis" format="string" />
        <attr name="ellipsisColor" format="color" />
    </declare-styleable>
    <declare-styleable name="GradientTextView">
        <attr name="gt_color_list" format="reference"/>
        <attr name="gt_gradient_direction" format="enum">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <attr name="gt_gradient_angle" format="integer"/>
    </declare-styleable>
</resources>